--THIS SCRIPT SHOULD BE INSERTED INTO A NEW OBJECT UNDER ServerScriptService


-- Loop through all child modules of the current script
for _, module in pairs(script:GetChildren()) do
    -- Create a coroutine to load the module asynchronously
    local loadMod = coroutine.create(function()
        require(module) -- Load and execute the module
    end)

    -- Start the coroutine
    coroutine.resume(loadMod)
end
