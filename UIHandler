-- ğŸ” Loop through all children of this script
for _, module in pairs(script:GetChildren()) do

	-- ğŸ§ª Check if the child is a ModuleScript before requiring
	if module:IsA("ModuleScript") then

		-- ğŸš€ Create a coroutine to load the module asynchronously
		local loadMod = coroutine.create(function()
			-- ğŸ§° Attempt to require the module safely
			local success, result = pcall(require, module)

			if success then
				print("âœ… Loaded module:", module.Name)
				-- Optional: store result in a table if you want to track loaded modules
			else
				warn("âŒ Failed to load module:", module.Name, "\n", result)
			end
		end)

		-- â–¶ï¸ Start the coroutine
		coroutine.resume(loadMod)
	end
end
